<UserControl x:Class="PointOfSale.CustomizationScreens.BakedBeansCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             xmlns:my="clr-namespace:CowboyCafe.Data;assembly=CowboyCafe.Data"    
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Control.Resources>
        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" 
                            x:Key="DataSize">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="my:Size"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Control.Resources>
    <Border>
        <StackPanel>
            <TextBlock FontSize="20">Choose Size of Baked Beans</TextBlock>
            <ListBox x:Name="mySizeBox" FontSize="20" 
                     ItemsSource="{Binding Source={StaticResource DataSize}}" 
                     SelectedItem="{Binding Path=Size}"
                     SelectionChanged="AddItemButton_Click"/>
        </StackPanel>
    </Border>
</UserControl>
