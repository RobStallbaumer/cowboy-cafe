<UserControl x:Class="PointOfSale.TransactionControlxaml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        
        <Button Height="100" Width="200" Margin="100" HorizontalAlignment="Left"
                Click="OnCashButtonClicked" FontSize="30">Cash</Button>
        <Button Height="100" Width="200" Margin="100" FontSize="30" 
                Click="OnCreditButtonClicked" HorizontalAlignment="Right" >Credit</Button>

    </Grid>
</UserControl>
