<UserControl x:Class="PointOfSale.OrderControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="75"/>

            <Setter Property="Width" Value="200"/>
        </Style>

    </UserControl.Resources>

    <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button x:Name="ItemSelectionButton" Click="ItemSelectionButton_Click">Item Selection</Button>
            <Button x:Name="CancelOrderButton" Click="CancelOrderButton_Click">Cancel Order</Button>
            <Button x:Name="CompleteOrderButton" Click="CompleteOrderButton_Click">Complete Order</Button>
            <local:MenuItemSelectionControl Grid.Row="1"/>
        </Grid>
            
            
            <local:OrderSummaryControl Grid.Column="2" Width="200"/>
        </Grid>
        
    
</UserControl>
